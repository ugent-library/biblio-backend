{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Biblio dataset",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "#/$defs/non-empty-string"
        },
        "abstract": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/text"
            }
        },
        "access_level": {
            "type": "string",
            "enum": [
                "info:eu-repo/semantics/openAccess",
                "info:eu-repo/semantics/restrictedAccess",
                "info:eu-repo/semantics/embargoedAccess",
                "info:eu-repo/semantics/closedAccess"
            ]
        },
        "author": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/contributor"
            }
        },
        "creator_id": {
            "$ref": "#/$defs/non-empty-string"
        },
        "doi": {
            "$ref": "#/$defs/non-empty-string"
        },
        "format": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/non-empty-string"
            }
        },
        "keyword": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/non-empty-string"
            }
        },
        "publisher": {
            "$ref": "#/$defs/non-empty-string"
        },
        "status": {
            "type": "string",
            "enum": [
                "private",
                "public",
                "returned",
                "deleted"
            ]
        },
        "title": {
            "$ref": "#/$defs/non-empty-string"
        },
        "user_id": {
            "$ref": "#/$defs/non-empty-string"
        },
        "year": {
            "$ref": "#/$defs/non-empty-string"
        }
    },
    "required": [
        "id",
        "status"
    ],
    "allOf": [
        {
            "if": {
                "properties": {
                    "status": {
                        "const": "public"
                    }
                }
            },
            "then": {
                "required": [
                    "access_level",
                    "doi",
                    "format",
                    "publisher",
                    "title",
                    "year"
                ]
            }
        }
    ],
    "$defs": {
        "contributor": {
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/$defs/non-empty-string"
                },
                "full_name": {
                    "$ref": "#/$defs/non-empty-string"
                },
                "first_name": {
                    "$ref": "#/$defs/non-empty-string"
                },
                "last_name": {
                    "$ref": "#/$defs/non-empty-string"
                }
            },
            "required": [
                "first_name",
                "last_name"
            ]
        },
        "non-empty-string": {
            "type": "string",
            "minLength": 1
        },
        "text": {
            "type": "object",
            "properties": {
                "text": {
                    "$ref": "#/$defs/non-empty-string"
                },
                "lang": {
                    "$ref": "#/$defs/non-empty-string"
                }
            },
            "required": [
                "text",
                "lang"
            ]
        }
    }
}