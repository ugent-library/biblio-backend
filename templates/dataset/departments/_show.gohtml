{{ if not .IsHTMXRequest }}<div class="card card-collapsible mb-6 dataset-departments">{{ end }}
    <div class="card-header">
        <div class="collapse-trigger collapsed" data-toggle="collapse" data-target="#collapse-departments" aria-expanded="false" aria-controls="collapse-departments"></div>
        <div class="bc-toolbar">
            <div class="bc-toolbar-left">
                <i class="if if-chevron-right mr-4 text-muted"></i>Departments
            </div>
            <div class="bc-toolbar-right">
                {{if .User.CanEditDataset .D.Dataset}}
                    <button class="btn btn-outline-primary"
                        hx-get="{{pathFor "datasetDepartments" "id" .D.Dataset.ID}}"
                        hx-target="#datasets-departments-modal"
                        hx-trigger="click"
                    >
                        <i class="if if-add"></i>
                        <div class="btn-text">Add department</div>
                    </button>
                {{end}}
            </div>
        </div>
    </div>

    <div class="collapse{{ if .IsHTMXRequest }} show{{ end }}" id="collapse-departments">
        <div class="card-body p-0">
            <table class="table">
                <tbody>
                    {{ range $k, $v := .D.Dataset.Department }}
                    <tr>
                        <td class="pl-6">
                            <div class="d-flex w-100">
                                <div class="w-100">
                                    <div class="d-flex align-items-start">
                                        <div class="list-group-item-content">
                                            <div class="list-group-item-text">
                                                <h4 class="c-h4">{{ $.T "organization" $v.ID }}</h4>
                                                <div class="text-muted c-body-small">Department ID: {{ $v.ID }}</div>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="pr-6">
                            {{if $.User.CanEditDataset $.D.Dataset}}
                            <div class="c-button-toolbar">
                                <div class="dropdown">
                                    <button class="btn btn-link btn-icon-only btn-link-muted" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="if if-more"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <button class="dropdown-item" type="button"
                                            hx-get="{{pathFor "datasetDepartments_confirm_remove_from_dataset" "id" $.D.Dataset.ID "department_id" $v.ID}}"
                                            hx-target="#datasets-departments-modal"
                                            hx-trigger="click"
                                        >
                                            <i class="if if-delete"></i>
                                            <span>Remove from dataset</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            {{end}}
                        </td>
                    </tr>
                    {{ end }}
                </tbody>
            </table>
        </div>
    </div>

    <div id="datasets-departments-modal" class="modals"></div>
{{ if not .IsHTMXRequest }}</div>{{ end }}
