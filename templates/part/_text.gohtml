<div class="form-group row">
    <label class="col-sm-3 col-form-label align-self-start" for="{{.Label}}">
        {{.Label}}
        {{if .Required}}&nbsp;<abbr class="required" title="Required">*</abbr>{{end}}
    </label>
    <div class="col-sm-9">
        <span>{{.Text}}</span>
        {{if .PrefilledDOI }}
        <div class="small text-muted mt-2">Pre-filled based on DOI</div>
        {{end}}
    </div>
</div>
