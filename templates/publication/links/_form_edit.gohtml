<div id="modal-backdrop" class="modal-backdrop fade show" style="display:block;"></div>
<div class="modal show" id="editLink" tabindex="-1" style="display: block;" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Edit Link</h2>
            </div>
            <div class="modal-body">
                {{.Form.Text (.Form.Name "url" (.Form.Locale "builder.link")) (.Form.Value .Link.URL) (.Form.Cols 12)}}
                {{.Form.List (.Form.Name "relation" (.Form.Locale "builder.link")) (.Form.Value .Link.Relation) (.Form.Cols 12)
                    (.Form.Choices .Vocabularies.publication_link_relations (.Form.Locale "publication_link_relations"))}}
                {{.Form.Text (.Form.Name "description" (.Form.Locale "builder.description")) (.Form.Value .Link.Description) (.Form.Cols 12)}}
            </div>
            <div class="modal-footer">
                <button class="btn btn-link modal-close">Cancel</button>
                <button type="button" name="update" class="btn btn-primary update-link"
                    hx-put="{{pathFor "publication_links_update_link" "id" .PublicationID "delta" .Delta}}"
                    hx-target="#links-table tbody"
                    hx-include=".modal-body"
                    hx-swap="innerHTML settle:.15s"
                >
                    Update link
                </button>
            </div>
        </div>
    </div>
</div>